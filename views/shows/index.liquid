{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All TV Shows</h2>
    <div class="row">
        {% for show in shows %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ show.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Description: {{ show.description }}
                </h5>
                <p class="card-text">
                    Genre: {{ show.genre }}
                </p>
                <p class="card-text">
                    Rating: {{ show.rating }}
                </p>
                <a href="/shows/{{ show.id }}" class="btn btn-info">
                    View {{ show.title }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}